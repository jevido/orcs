# Application
APP_NAME=ORCS
APP_ENV=development
APP_URL=http://localhost:42069
APP_DEBUG=true

# Server
PORT=42069
SERVER_IDLE_TIMEOUT=60

# CORS
CORS_ENABLED=false

# OpenAPI
OPENAPI_TITLE="ORCS API"
OPENAPI_VERSION=0.1.0
OPENAPI_DESCRIPTION=

# Database
# PostgreSQL (use with docker-compose up -d)
DATABASE_URL=postgres://orcs:orcs@localhost:5432/orcs

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/orcs

# SQLite
# DATABASE_URL=sqlite://storage/database.sqlite

# Connection Pool (PostgreSQL/MySQL only)
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30
DB_MAX_LIFETIME=0
DB_CONNECTION_TIMEOUT=30

# Authentication
AUTH_GUARD=jwt
JWT_SECRET=change-me-in-production-use-a-strong-random-string
JWT_EXPIRES_IN=1h

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_REQUESTS=true
LOG_INCLUDE_HEADERS=false
LOG_INCLUDE_BODY=false
