# Application
APP_NAME=ORCS
APP_ENV=development
APP_URL=http://localhost:42069
PORT=42069

# OpenAPI Documentation
OPENAPI_TITLE=My API
OPENAPI_VERSION=1.0.0
OPENAPI_DESCRIPTION=API built with ORCS

# Database - PostgreSQL (docker-compose)
# Uncomment to use PostgreSQL from docker-compose.yml
DB_CONNECTION=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=orcs
DB_USER=orcs
DB_PASSWORD=secret

# Database - SQLite (alternative)
# Uncomment to use SQLite instead of PostgreSQL
# DB_CONNECTION=sqlite
# DB_DATABASE=./database/database.sqlite

# Authentication
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_EXPIRES_IN=7d

# Queue
QUEUE_DRIVER=memory
# QUEUE_DRIVER=database
# QUEUE_DATABASE=./database/queue.sqlite

# Redis (docker-compose)
# Uncomment to use Redis for caching/sessions
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Logging
LOG_LEVEL=info
LOG_FILE=./storage/logs/app.log

# S3 Storage - MinIO (docker-compose)
# Uncomment to use MinIO from docker-compose.yml
# S3_ENDPOINT=http://localhost:9000
# S3_REGION=us-east-1
# S3_BUCKET=orcs
# S3_ACCESS_KEY=minio
# S3_SECRET_KEY=minio123
# S3_USE_PATH_STYLE=true

# S3 Storage - AWS (production)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET=my-bucket
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key

# Email (Mailpit from docker-compose)
# MAIL_HOST=localhost
# MAIL_PORT=1025
# MAIL_FROM=noreply@example.com

# GitHub Token (for package installation)
# Generate at: https://github.com/settings/tokens
# GITHUB_TOKEN=your_token_here
